#include <iostream>
#include<string>
#include<cmath>
using namespace std;

int main()
{
	int number_of_stones,number_of_neighbor=0;
	cin >> number_of_stones;
	string color_of_stones;
	cin >> color_of_stones;
	for (int i = 0; i < number_of_stones; i++)
	{
		if (color_of_stones[i] == color_of_stones[i + 1])
			number_of_neighbor++;

	}
	cout << number_of_neighbor;
	return 0;
}

